{
  "name": "yourbot",
  "version": "1.0.0",
  "description": "Discord bot for managing reaction roles with dynamic S3-backed configuration",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "nodemon bot.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "aws-sdk": "^2.1691.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "aws-sdk-mock": "^5.8.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "text-summary"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "coverageThreshold": {
      "src/ActionExecutor.js": {
        "branches": 95,
        "functions": 100,
        "lines": 95,
        "statements": 95
      },
      "src/UserValidator.js": {
        "branches": 95,
        "functions": 100,
        "lines": 95,
        "statements": 95
      },
      "src/ProposalParser.js": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      },
      "src/EventHandlers.js": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}